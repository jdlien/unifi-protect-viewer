# GitHub Token for auto-updates
GH_TOKEN=_GITHUB_PERSONAL_ACCESS_TOKEN_HERE_

# Apple Developer credentials for notarization
# Replace these with your actual values when you're ready to notarize
APPLE_ID=jd@jdlien.com
APPLE_ID_PASSWORD=_APP_SPECIFIC_PASSWORD_HERE_
APPLE_APP_SPECIFIC_PASSWORD=_APP_SPECIFIC_PASSWORD_HERE_
APPLE_TEAM_ID=_TEAM_ID_HERE_

# Application Environment
# Set to 'development' during development, 'production' for releases
NODE_ENV=production

# Auto-update Configuration
# Set to 'true' to disable auto-updates completely
DISABLE_AUTO_UPDATES=false
# Interval in milliseconds between update checks (default: 6 hours)
UPDATE_CHECK_INTERVAL=21600000
# Force updates in development mode (for testing only)
FORCE_DEV_UPDATES=true

# Logging Configuration
# Options: error, warn, info, debug
LOG_LEVEL=info
# Whether to send error reports (if implemented)
ENABLE_ERROR_REPORTING=false

# macOS signing
APPLE_ID=your.email@example.com
APPLE_APP_SPECIFIC_PASSWORD=app-specific-password
APPLE_TEAM_ID=your-team-id

# Windows code signing
# Option 1: Use certificateFile in package.json and specify password here
WIN_CSC_KEY_PASSWORD=your-certificate-password

# Option 2: Alternative method using CSC_* variables
# CSC_LINK=path/to/your-certificate.pfx (or base64-encoded PFX content)
# CSC_KEY_PASSWORD=your-certificate-password