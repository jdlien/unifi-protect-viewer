{
  "name": "unifi-protect-viewer",
  "productName": "UniFi Protect Viewer",
  "version": "1.1.1",
  "description": "Electron app for UniFi Protect",
  "main": "main.js",
  "scripts": {
    "start": "electron --ignore=builds .",
    "dev": "NODE_ENV=development electron .",
    "clean": "rm -rf builds dist",
    "build": "electron-builder --config",
    "build:mac": "CSC_IDENTITY_AUTO_DISCOVERY=false electron-builder --mac",
    "build:win": "electron-builder --win",
    "build:linux": "electron-builder --linux",
    "dist": "CSC_IDENTITY_AUTO_DISCOVERY=false npm run clean && electron-builder --mac --win --publish never",
    "dist:mac": "CSC_IDENTITY_AUTO_DISCOVERY=false npm run clean && electron-builder --mac --publish never",
    "release": "npm run clean && npm version patch && electron-builder --mac --win --linux --publish always",
    "release:mac": "npm run clean && npm version patch && electron-builder --mac --publish always",
    "release:win": "npm run clean && npm version patch && electron-builder --win --publish always",
    "release:linux": "npm run clean && npm version patch && electron-builder --linux --publish always"
  },
  "keywords": [
    "app",
    "electron",
    "unifi",
    "protect",
    "viewer"
  ],
  "author": "JD Lien",
  "license": "",
  "devDependencies": {
    "@electron/notarize": "^2.3.0",
    "@electron/packager": "^18.1.3",
    "archiver": "^7.0.1",
    "electron": "^35.0.2",
    "electron-builder": "^24.13.3",
    "electron-reloader": "^1.2.3",
    "glob": "^11.0.1",
    "prettier": "^3.3.3"
  },
  "dependencies": {
    "dotenv": "^16.4.7",
    "electron-store": "^10.0.0",
    "electron-updater": "^6.3.9"
  },
  "build": {
    "appId": "com.jdlien.unifi-protect-viewer",
    "productName": "UniFi Protect Viewer",
    "mac": {
      "category": "public.app-category.utilities",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64",
            "universal"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "arm64",
            "universal"
          ]
        }
      ],
      "publish": [
        "github"
      ],
      "icon": "src/img/icon.icns",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist",
      "notarize": true
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "src/img/256.png",
      "publish": [
        "github"
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Utility",
      "publish": [
        "github"
      ]
    },
    "publish": [
      {
        "provider": "github",
        "owner": "jdlien",
        "repo": "unifi-protect-viewer",
        "releaseType": "release"
      }
    ],
    "files": [
      "**/*",
      "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
      "!**/node_modules/*/{.git,.gitignore,.github,.npmignore,.prettierignore,.editorconfig}",
      "!**/node_modules/.bin",
      "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
      "!node_modules/.cache/*",
      "!**/.cache/*",
      "!.{git,github,vscode}",
      "!{builds,releases,scripts,__tests__,test,coverage}",
      "!{README.md,.git,.vscode,*.zip}"
    ],
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "afterSign": "scripts/notarize.js",
    "generateUpdatesFilesForAllChannels": true
  }
}
