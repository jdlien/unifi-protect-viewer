{
  "name": "unifi-protect-viewer",
  "productName": "UniFi Protect Viewer",
  "version": "1.1.5",
  "description": "Electron app for UniFi Protect",
  "main": "main.js",
  "scripts": {
    "start": "electron --ignore=builds .",
    "dev": "NODE_ENV=development electron .",
    "clean": "rm -rf builds dist",
    "build": "electron-builder --config",
    "build:mac": "electron-builder --mac --universal",
    "build:mac-arm64": "electron-builder --mac --arm64",
    "build:mac-x64": "electron-builder --mac --x64",
    "build:win-arm64": "electron-builder --win --arm64",
    "build:win-ia32": "electron-builder --win --ia32",
    "build:win-x64": "electron-builder --win --x64",
    "build:linux": "electron-builder --linux --x64",
    "build:linux-arm64": "electron-builder --linux --arm64",
    "dist": "CSC_IDENTITY_AUTO_DISCOVERY=false npm run clean && electron-builder --mac --win --publish never",
    "dist:mac": "CSC_IDENTITY_AUTO_DISCOVERY=false npm run clean && electron-builder --mac --publish never",
    "notarize:mac:x64": "NODE_ENV=production npm run clean && APPLE_TEAM_ID=A93Q7MKECL electron-builder --mac --x64 --arm64=false",
    "notarize:mac:arm64": "NODE_ENV=production mv dist dist-x64 && APPLE_TEAM_ID=A93Q7MKECL electron-builder --mac --arm64 --x64=false",
    "notarize:mac:universal": "NODE_ENV=production mv dist dist-arm64 && APPLE_TEAM_ID=A93Q7MKECL electron-builder --mac --universal",
    "notarize:mac:all": "npm run notarize:mac:x64 && npm run notarize:mac:arm64 && npm run notarize:mac:universal && mkdir -p dist-all && mv dist/* dist-all/ && mv dist-x64/* dist-all/ && mv dist-arm64/* dist-all/ && rm -rf dist && mv dist-all dist",
    "release:mac:x64": "npm run clean && npm version patch && APPLE_TEAM_ID=A93Q7MKECL electron-builder --mac --x64 --arm64=false --publish always",
    "release:mac:arm64": "APPLE_TEAM_ID=A93Q7MKECL electron-builder --mac --arm64 --x64=false --publish always",
    "release:mac:universal": "APPLE_TEAM_ID=A93Q7MKECL electron-builder --mac --universal --publish always",
    "release:mac": "npm run release:mac:x64 && npm run release:mac:arm64 && npm run release:mac:universal",
    "release:win": "npm run clean && npm version patch && electron-builder --win --publish always",
    "release:linux": "npm run clean && npm version patch && electron-builder --linux --publish always",
    "release": "npm run release:mac && npm run release:win && npm run release:linux",
    "super-release": "node scripts/release.js",
    "release:major": "node scripts/release.js major",
    "release:minor": "node scripts/release.js minor",
    "release:patch": "node scripts/release.js patch"
  },
  "keywords": [
    "app",
    "electron",
    "unifi",
    "protect",
    "viewer"
  ],
  "author": "JD Lien",
  "license": "",
  "devDependencies": {
    "@electron/notarize": "^2.3.0",
    "@electron/packager": "^18.1.3",
    "archiver": "^7.0.1",
    "electron": "^35.0.2",
    "electron-builder": "^24.13.3",
    "electron-reloader": "^1.2.3",
    "glob": "^11.0.1",
    "prettier": "^3.3.3",
    "readline-sync": "^1.4.10",
    "semver": "^7.7.1"
  },
  "dependencies": {
    "dotenv": "^16.4.7",
    "electron-store": "^10.0.0",
    "electron-updater": "^6.3.9"
  },
  "build": {
    "appId": "com.jdlien.unifi-protect-viewer",
    "productName": "UniFi Protect Viewer",
    "mac": {
      "category": "public.app-category.utilities",
      "target": "dmg",
      "publish": [
        "github"
      ],
      "icon": "src/img/icon.icns",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist",
      "notarize": true
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "src/img/256.png",
      "publish": [
        "github"
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Utility",
      "publish": [
        "github"
      ]
    },
    "publish": [
      {
        "provider": "github",
        "owner": "jdlien",
        "repo": "unifi-protect-viewer",
        "releaseType": "release"
      }
    ],
    "files": [
      "**/*",
      "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
      "!**/node_modules/*/{.git,.gitignore,.github,.npmignore,.prettierignore,.editorconfig}",
      "!**/node_modules/.bin",
      "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
      "!node_modules/.cache/*",
      "!**/.cache/*",
      "!.{git,github,vscode}",
      "!{builds,releases,scripts,__tests__,test,coverage}",
      "!{README.md,.git,.vscode,*.zip}"
    ],
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "afterSign": "scripts/notarize.js",
    "generateUpdatesFilesForAllChannels": true
  }
}
